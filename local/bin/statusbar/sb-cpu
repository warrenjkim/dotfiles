#!/bin/sh

temps=$(sensors | grep -E "temp[1-6]" | grep -v "(" | awk "NR>1" | awk '{print $1 " " $2}')
case $BLOCK_BUTTON in
    1) notify-send "ó°»  CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | awk "NR>1" | head -n 5)\\n\\n$temps" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "ó°»  CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# sensors | awk '/Core 0/ {print "ðŸŒ¡" $3}'
echo "ó°»  core 1: $(sensors | grep -E "temp1" | grep -v "(" | awk "NR>1" | cut -d " " -f9)"
